<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }} | Tony Prokop</title>
    <link href="https://fonts.googleapis.com/css?family=Sniglet&display=swap" rel="stylesheet">
    {% set css %}
    {% include "index.css" %}
    {% endset %}
    {% set darkTheme %}
    {% include "dark-theme.css" %}
    {% endset %}
    <style>
      {{css | cssmin | safe}}
      {{darkTheme | cssmin | safe}}
    </style>
    {% set js %}
    {% include "index.js" %}
    {% endset %}
    <script>
      {{ js | jsmin | safe }}
    </script>
  </head>
  <body>
    {% set links = [
      {
        linkUrl: '/',
        text: 'Home',
        iconClass: 'home',
        iconUrl: 'icons/home.svg#home'
      }, {
        linkUrl: '/projects',
        text: 'Projects',
        iconClass: 'briefcase',
        iconUrl: 'icons/briefcase.svg#briefcase'
      }, {
        linkUrl: '/blog',
        text: 'Blog',
        iconClass: 'blog',
        iconUrl: 'icons/blog.svg#blog'
      }, {
        linkUrl: '/about',
        text: 'About',
        iconClass: 'user',
        iconUrl: 'icons/user.svg#user'
      }, {
        linkUrl: '/resume',
        text: 'Resum√©',
        iconClass: 'file',
        iconUrl: 'icons/file.svg#file'
      }, {
        linkUrl: '/contact',
        text: 'Contact',
        iconClass: 'message-circle',
        iconUrl: 'icons/message-circle.svg#message-circle'
      }
    ] %}
    <header  id="menu">
      <ul>
        {% for link in links %}
          <li>
            <a href="{{link.linkUrl}}">
              <svg class="{{link.iconClass}}">
                <use href="{{link.iconUrl}}"/>
              </svg>
              <span class="menu-item-text">{{link.text}}</span>
              <svg class="chevron-right">
                <use href="icons/chevron-right.svg#chevron-right"/>
              </svg>
            </a>
          </li>
        {% endfor %}
      </ul>
      <div class="menu-toggle" onClick="toggleMenu()"></div>
    </header>
    <div class="top-bar">
      <svg class="sun">
        <use href="icons/sun.svg#sun"/>
      </svg>
    </div>
    <div class="content-container">
      <div class="content">
        {{ content | safe }}
      </div>
    </div>
  </body>
</html>